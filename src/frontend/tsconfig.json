{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["./**/*.ts", "./**/*.vue"],
    "compilerOptions": {
        "strict": true,
        "composite": true,
        "noUncheckedIndexedAccess": true,
        "types": ["vite/client"],
        "baseUrl": ".", // Resolves relative to this file
        "paths": {
            "@/*": ["./*"]
        }
    }
}
