{
    "include": ["./**/*"],
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext"],
        "module": "ESNext",
        "moduleDetection": "force",
        "allowJs": true,

        // Resolution and bundling
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "verbatimModuleSyntax": true,
        "noEmit": true,
        "baseUrl": ".",

        // Strictness
        "strict": true
        // "noUncheckedIndexedAccess": true // Probably should be enabled but it's pretty annoying

        // "esModuleInterop": true,
        // "allowSyntheticDefaultImports": true
    }
}
