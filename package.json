{
    "name": "chat",
    "version": "0.1.0",
    "type": "module",
    "main": "backend/electron.js",
    "description": "A batteries included AI Chat Application",
    "author": "Strange Bytes",
    "scripts": {
        "dev": "vite",
        "dev:server": "DEV=1 tsx watch --clear-screen=false ./src/backend/server.ts",
        "dev:browser": "vite",
        "build": "npm run build:frontend && npm run build:backend",
        "build:frontend": "vite build",
        "build:backend": "node --import tsx build.ts",
        "make": "node --import tsx build-electron.ts",
        "update-api": "openapi-typescript http://localhost:31700/docs/json -o ./src/frontend/api.d.ts"
    },
    "dependencies": {
        "@fastify/cors": "^9.0.1",
        "@fastify/swagger": "^8.14.0",
        "@fastify/swagger-ui": "^3.1.0",
        "@huggingface/hub": "^0.14.7",
        "@huggingface/jinja": "^0.2.1",
        "better-sqlite3": "^11.0.0",
        "daisyui": "^4.7.2",
        "drizzle-orm": "^0.31.2",
        "drizzle-zod": "^0.5.1",
        "eventsource-parser": "^1.1.2",
        "fastify": "^4.27.0",
        "fastify-type-provider-zod": "^1.2.0",
        "marked": "^12.0.2",
        "openapi-fetch": "^0.9.5",
        "pinia": "^2.1.7",
        "vue": "^3.4.21",
        "vue-router": "^4.3.0",
        "vue-toastification": "^2.0.0-rc.5",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@electron/fuses": "^1.8.0",
        "@types/better-sqlite3": "^7.6.10",
        "@types/node": "^20.14.2",
        "@vitejs/plugin-vue": "^5.0.4",
        "@vue/eslint-config-prettier": "^9.0.0",
        "@vue/eslint-config-typescript": "^12.0.0",
        "@vue/tsconfig": "^0.5.1",
        "autoprefixer": "^10.4.18",
        "drizzle-kit": "^0.22.7",
        "electron": "^30.1.0",
        "electron-builder": "^24.13.3",
        "esbuild": "^0.21.5",
        "eslint": "^8.57.0",
        "openapi-typescript": "^6.7.5",
        "prettier": "^3.2.5",
        "tailwindcss": "^3.4.1",
        "tsx": "^4.7.2",
        "vite": "^5.1.5",
        "vue-tsc": "^2.0.6"
    }
}
