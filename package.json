{
    "name": "cybermuse-desktop",
    "version": "0.1.0",
    "type": "module",
    "main": "backend/electron.js",
    "description": "A batteries included AI Chat Application",
    "author": "Strange Bytes",
    "scripts": {
        "dev": "concurrently -n \"frontend,server\" -c \"blue,green\" npm:dev:frontend npm:dev:server",
        "dev:frontend": "vite",
        "dev:server": "DEV=1 tsx watch --clear-screen=false ./src/backend/server.ts",
        "build": "npm run build:frontend && npm run build:backend",
        "build:frontend": "vite build",
        "build:backend": "node --import tsx build.ts",
        "build:backend-tsc": "tsc --p ./src/backend",
        "make": "node --import tsx build-electron.ts",
        "update-api": "openapi-typescript http://localhost:31700/docs/json -o ./src/frontend/api.d.ts"
    },
    "dependencies": {
        "@fastify/swagger-ui": "^3.1.0",
        "better-sqlite3": "^11.1.1",
        "node-llama-cpp": "^3.1.1",
        "sharp": "^0.33.5"
    },
    "devDependencies": {
        "@electron/fuses": "^1.8.0",
        "@electron/rebuild": "^3.6.2",
        "@fastify/cors": "^9.0.1",
        "@fastify/static": "^7.0.4",
        "@fastify/swagger": "^8.14.0",
        "@fastify/type-provider-typebox": "^4.0.0",
        "@huggingface/hub": "^0.17.0",
        "@huggingface/jinja": "^0.3.1",
        "@sinclair/typebox": "^0.33.14",
        "@t3-oss/env-core": "^0.11.1",
        "@types/better-sqlite3": "^7.6.10",
        "@types/node": "^20.14.9",
        "@vitejs/plugin-vue": "^5.1.4",
        "@vue/eslint-config-prettier": "^9.0.0",
        "@vue/eslint-config-typescript": "^13.0.0",
        "@vue/tsconfig": "^0.5.1",
        "autoprefixer": "^10.4.20",
        "chalk": "^5.3.0",
        "concurrently": "^9.0.1",
        "daisyui": "^4.12.12",
        "drizzle-kit": "0.22.8",
        "drizzle-orm": "0.33.0",
        "drizzle-typebox": "^0.1.1",
        "electron": "^32.1.2",
        "electron-builder": "^25.1.7",
        "env-paths": "^3.0.0",
        "esbuild": "^0.24.0",
        "eslint": "^8.57.0",
        "eventsource-parser": "^1.1.2",
        "fastify": "^4.28.1",
        "marked": "^14.1.2",
        "openapi-fetch": "^0.12.2",
        "openapi-typescript": "^7.4.1",
        "pinia": "^2.2.4",
        "prettier": "^3.3.3",
        "rotating-file-stream": "^3.2.5",
        "tailwindcss": "^3.4.13",
        "tslog": "^4.9.3",
        "tsx": "^4.19.1",
        "vite": "^5.4.8",
        "vue": "^3.5.11",
        "vue-router": "^4.4.5",
        "vue-toastification": "^2.0.0-rc.5",
        "zod": "^3.23.8"
    }
}
