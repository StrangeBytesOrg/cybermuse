{
    "name": "cybermuse-desktop",
    "version": "0.1.0",
    "type": "module",
    "main": "backend/electron.js",
    "description": "A batteries included AI Chat Application",
    "author": "Strange Bytes",
    "scripts": {
        "dev": "concurrently -n \"frontend,server\" -c \"blue,green\" npm:dev:frontend npm:dev:server",
        "dev:frontend": "vite --host",
        "dev:server": "DEV=1 tsx watch --clear-screen=false ./src/backend/server.ts",
        "build": "npm run build:frontend && npm run build:backend",
        "build:frontend": "vite build",
        "build:backend": "node --import tsx build.ts",
        "build:backend-tsc": "tsc --p ./src/backend",
        "make": "node --import tsx build-electron.ts",
        "update-api": "openapi-typescript http://localhost:31700/docs/json -o ./src/frontend/api.d.ts"
    },
    "dependencies": {
        "@libsql/client": "^0.14.0",
        "node-llama-cpp": "^3.2.0",
        "sharp": "^0.33.5"
    },
    "devDependencies": {
        "@electron/fuses": "^1.8.0",
        "@electron/rebuild": "^3.7.0",
        "@fastify/cors": "^10.0.1",
        "@fastify/static": "^8.0.2",
        "@huggingface/hub": "^0.19.0",
        "@huggingface/jinja": "^0.3.2",
        "@strangebytes/pouchdb-orm": "^0.0.12",
        "@t3-oss/env-core": "^0.11.1",
        "@trpc/client": "^11.0.0-rc.604",
        "@trpc/server": "^11.0.0-rc.604",
        "@types/better-sqlite3": "^7.6.10",
        "@types/node": "^22.8.6",
        "@types/pouchdb": "^6.4.2",
        "@vitejs/plugin-vue": "^5.1.4",
        "@vue/eslint-config-prettier": "^10.1.0",
        "@vue/eslint-config-typescript": "^14.1.3",
        "@vue/tsconfig": "^0.5.1",
        "autoprefixer": "^10.4.20",
        "chalk": "^5.3.0",
        "concurrently": "^9.0.1",
        "daisyui": "^4.12.14",
        "drizzle-kit": "^0.27.0",
        "drizzle-orm": "^0.36.0",
        "drizzle-zod": "^0.5.1",
        "electron": "^33.0.2",
        "electron-builder": "^25.1.8",
        "env-paths": "^3.0.0",
        "esbuild": "^0.24.0",
        "eslint": "^9.13.0",
        "eslint-plugin-vue": "^9.30.0",
        "events": "^3.3.0",
        "fastify": "^5.1.0",
        "marked": "^14.1.3",
        "pinia": "^2.2.5",
        "pouchdb": "^9.0.0",
        "pouchdb-find": "^9.0.0",
        "prettier": "^3.3.3",
        "rotating-file-stream": "^3.2.5",
        "tailwindcss": "^3.4.14",
        "tslog": "^4.9.3",
        "tsx": "^4.19.2",
        "vite": "^5.4.10",
        "vue": "^3.5.12",
        "vue-router": "^4.4.5",
        "vue-toastification": "^2.0.0-rc.5",
        "zod": "^3.23.8",
        "zod-validation-error": "^3.4.0"
    }
}
